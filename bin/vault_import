#!/usr/bin/env python3
import argparse
import getpass
import os.path
from vault_importer.csv import Csv
from vault_importer.vault import Vault


def args():
    p = argparse.ArgumentParser(description='Import a KeepassXC CSV into Hashicorp Vault.')
    p.add_argument('--csv', required=True, help='Location of the CSV file.')
    p.add_argument('--base', default='linux_vault', help='Base path of your secrets in the vault.')
    p.add_argument('--url', default='https://vault.example.com:8200',
                   help='URL of the Vault. Include the port.')
    return p.parse_args()


def main():
    a = args()
    if not os.path.exists(a.csv):
        print('Error: path {0} does not exist!'.format(a.csv))
        return 1
    try:
        c = Csv(csv_file=a.csv)
        secrets = c.parse()
    except Exception as e:
        print('Error: {0}.'.format(e))
        return 2
    root_token = getpass.getpass('Please provide a Vault token with sufficient privileges: ')
    try:
        v = Vault(root_token=root_token, base_path=a.base, base_url=a.url)
        v_result = v.add(secrets=secrets)
    except Exception as e:
        print('Error: {0}.'.format(e))
        return 3
    if v_result is True:
        print('Import completed.')
        return 0
    print('Some items could not be imported:')
    for failed in v_result:
        print(failed)
    return 4


if __name__ == '__main__':
    exit(main())

